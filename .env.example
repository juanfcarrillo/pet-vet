# Variables de entorno para desarrollo local

# Base de datos
DB_HOST=localhost
DB_USERNAME=postgres
DB_PASSWORD=postgres

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Sentry (opcional para desarrollo)
# SENTRY_DSN=your-sentry-dsn

# Configuración de servicios
NODE_ENV=development

# Puertos de servicios
GATEWAY_PORT=3000
AUTH_SERVICE_PORT=3001
APPOINTMENT_SERVICE_PORT=3002
CHAT_SERVICE_PORT=3003
FRONTEND_PORT=5173


# URLs de servicios (para el Gateway)
AUTH_SERVICE_URL=http://localhost:3001
APPOINTMENT_SERVICE_URL=http://localhost:3002
CHAT_SERVICE_URL=http://localhost:3003

FRONTEND_URL=http://localhost:5173
WS_URL=ws://localhost:3003

CONSUL_HOST=localhost
CONSUL_PORT=8500

# Configuración de correo (para notificaciones)
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USER=your-email@gmail.com
# MAIL_PASS=your-app-password

# Configuración de archivos
# UPLOAD_DIR=uploads
# MAX_FILE_SIZE=5242880
