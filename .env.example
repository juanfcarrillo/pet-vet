# Variables de entorno para desarrollo local

# Base de datos (uso general)
DB_HOST=localhost
DB_USERNAME=postgres
DB_PASSWORD=postgres

# JWT
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Sentry (opcional)
SENTRY_DSN=

# Entorno de ejecución
NODE_ENV=development

# Puertos de servicios
GATEWAY_PORT=3000
AUTH_SERVICE_PORT=3001
APPOINTMENT_SERVICE_PORT=3002
CHAT_SERVICE_PORT=3003
FRONTEND_PORT=5173

# URLs de servicios (usadas por el gateway)
AUTH_SERVICE_URL=http://localhost:3001
APPOINTMENT_SERVICE_URL=http://localhost:3002
CHAT_SERVICE_URL=http://localhost:3003

# Configuración de correo (opcional)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=your-email@example.com
MAIL_PASS=your-app-password

# Configuración de archivos (opcional)
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# Configuración de base de datos por microservicio

# Auth Service
AUTH_DB_HOST=your-auth-db-host
AUTH_DB_PORT=5432
AUTH_DB_USER=postgres
AUTH_DB_PASSWORD=your-password
AUTH_DB_NAME=auth_db

# Appointment Service
APPOINTMENT_DB_HOST=your-appointment-db-host
APPOINTMENT_DB_PORT=5433
APPOINTMENT_DB_USER=postgres
APPOINTMENT_DB_PASSWORD=your-password
APPOINTMENT_DB_NAME=appointment_db

# Chat Service
CHAT_DB_HOST=your-chat-db-host
CHAT_DB_PORT=5434
CHAT_DB_USER=postgres
CHAT_DB_PASSWORD=your-password
CHAT_DB_NAME=chat_db

# Frontend URL
FRONTEND_URL=http://localhost:5173

# WebSocket URL para el chat
WS_URL=ws://localhost:3003

# Configuración de Consul (service discovery)
CONSUL_HOST=localhost
CONSUL_PORT=8500
