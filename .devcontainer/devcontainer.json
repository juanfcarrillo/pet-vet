{
  "name": "Pet-Vet Microservices Development",
  "dockerComposeFile": "docker-compose.yml",
  "service": "devcontainer",
  "workspaceFolder": "/workspaces/pet-vet",
  
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "ms-vscode.vscode-json",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-jest",
        "ms-mssql.mssql",
        "ckolkman.vscode-postgres",
        "humao.rest-client",
        "ms-vscode.thunder-client",
        "formulahendry.auto-rename-tag",
        "ms-vscode.vscode-docker",
        "ms-vscode-remote.remote-containers",
        "github.copilot",
        "github.copilot-chat",
        "ms-vscode.git-graph",
        "eamodio.gitlens"
      ],
      "settings": {
        "typescript.preferences.importModuleSpecifier": "relative",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "files.exclude": {
          "**/node_modules": true,
          "**/dist": true,
          "**/.git": true
        },
        "search.exclude": {
          "**/node_modules": true,
          "**/dist": true
        },
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash"
          }
        }
      }
    }
  },

  "forwardPorts": [3000, 3001, 3002, 3003, 5173, 5432, 5433, 5434, 6379, 8080],
  "portsAttributes": {
    "3000": {
      "label": "API Gateway",
      "onAutoForward": "notify"
    },
    "3001": {
      "label": "Auth Service",
      "onAutoForward": "silent"
    },
    "3002": {
      "label": "Appointment Service", 
      "onAutoForward": "silent"
    },
    "3003": {
      "label": "Chat Service",
      "onAutoForward": "silent"
    },
    "5173": {
      "label": "Frontend (Vite)",
      "onAutoForward": "openBrowser"
    },
    "5432": {
      "label": "Auth DB (PostgreSQL)",
      "onAutoForward": "silent"
    },
    "5433": {
      "label": "Appointment DB (PostgreSQL)",
      "onAutoForward": "silent"
    },
    "5434": {
      "label": "Chat DB (PostgreSQL)",
      "onAutoForward": "silent"
    },
    "6379": {
      "label": "Redis",
      "onAutoForward": "silent"
    },
    "8080": {
      "label": "PgAdmin",
      "onAutoForward": "notify"
    }
  },

  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "postStartCommand": "bash .devcontainer/post-start.sh",

  "remoteUser": "node",
  "remoteEnv": {
    "NODE_ENV": "development",
    "DB_HOST": "auth-db",
    "DB_USERNAME": "postgres",
    "DB_PASSWORD": "postgres",
    "REDIS_HOST": "redis",
    "REDIS_PORT": "6379",
    "JWT_SECRET": "dev-super-secret-jwt-key-change-in-production",
    "JWT_EXPIRES_IN": "1h",
    "REFRESH_TOKEN_EXPIRES_IN": "7d"
  }
}
