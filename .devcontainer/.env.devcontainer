# Variables de entorno para DevContainer
# Estas variables se configuran autom치ticamente en el DevContainer

# Configuraci칩n de bases de datos
DB_HOST_AUTH=auth-db
DB_HOST_APPOINTMENT=appointment-db
DB_HOST_CHAT=chat-db
DB_PORT_AUTH=5432
DB_PORT_APPOINTMENT=5432
DB_PORT_CHAT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres

# Nombres de bases de datos
DB_NAME_AUTH=auth_db
DB_NAME_APPOINTMENT=appointment_db
DB_NAME_CHAT=chat_db

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=dev-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# Configuraci칩n de servicios
NODE_ENV=development
PORT_GATEWAY=3000
PORT_AUTH=3001
PORT_APPOINTMENT=3002
PORT_CHAT=3003
PORT_FRONTEND=5173

# URLs de servicios (para el Gateway)
AUTH_SERVICE_URL=http://localhost:3001
APPOINTMENT_SERVICE_URL=http://localhost:3002
CHAT_SERVICE_URL=http://localhost:3003
FRONTEND_URL=http://localhost:5173

# Configuraci칩n de CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Logging
LOG_LEVEL=debug

# Sentry (opcional para desarrollo)
# SENTRY_DSN=your-sentry-dsn-here

# Features flags (para desarrollo)
ENABLE_SWAGGER=true
ENABLE_CORS=true
ENABLE_HELMET=true
